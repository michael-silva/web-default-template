{
  "root": true,
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
    "overrides": [
    ],
    "ignorePatterns": ["**/node_modules/**"] ,
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "prettier"
      ],
    "rules": {
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "prettier/prettier": ["error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }]
    }
}
